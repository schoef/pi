set nowrap
set incsearch
set ignorecase
set pastetoggle=<F2>
set smartcase
set scrolloff=2
map!  <backspace>
imap  <backspace>
set expandtab
set tabstop=4
set shiftwidth=4
set noautoindent
"colorscheme lightblue
syntax enable
set paste
"map! f <Left>
"imap f <Left>
"map! b <Right>
"imap b <Right>
"map <A-Right> <C-w>l
"map <A-Left> <C-w>h
